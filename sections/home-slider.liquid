
<div class="slider-container">
  <div class="flexslider main-slider">
    <ul class="slides">
      {% for block in section.blocks %}
        {% if block.settings.slide %}
          <li data-thumb="{{ block.settings.slide_image | img_url: '1024x' }}">
            <a href="{{ block.settings.slide_link }}" class="slide-link">
              {{ block.settings.slide_image | img_url: '1024x' | img_tag: block.settings.slide_alt }}
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>

  </div>
  <div class="fancy-nav-container">
    {% for block in section.blocks %}
      {% if block.settings.slide %}
        <div class="fancy-nav-item" style="background-image:url({{ block.settings.slide_image | img_url: '500x' }});">
          <a{% if forloop.first %} class="active"{% endif %} href="#">{{ block.settings.slide_title }}</a>
          <svg class="fancy-nav-item-arrow" width="30px" height="83px" viewBox="0 0 30 83" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
              <!-- Generator: Sketch 46.2 (44496) - http://www.bohemiancoding.com/sketch -->
              <title>Triangle 2</title>
              <desc>Created with Sketch.</desc>
              <defs></defs>
              <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                  <g id="Desktop---v2---Dark" transform="translate(-1200.000000, -312.000000)" fill="#D08305">
                      <g id="Content" transform="translate(100.000000, 300.000000)">
                          <g id="Hero">
                              <g id="Triangle-2">
                                  <polygon points="1100 53.75 1129.97461 12.5 1129.97461 95"></polygon>
                              </g>
                          </g>
                      </g>
                  </g>
              </g>
          </svg>
<!--             <div class="fancy-nav-item-arrow-inner">
              <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7">
              <div class="contents">
                Put contents here.
              </div>
            </div> -->
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
  {% for block in section.blocks %}
    {% if block.settings.slide_link_title != blank %}
      <a class="btn slider-button slider-button-{{ forloop.index0 }}" href="{{ block.settings.slide_link }}">{{ block.settings.slide_link_title }}</a>
    {% endif %}
  {% endfor %}
</div>
<!-- / Mobile Banner \ -->
<div class="flexslider mobile-slider">
  <ul class="slides">
    {% for i in (1..6) %}
      {% capture slide %}mobile_slide_{{ i }}{% endcapture %}
      {% capture slide_link %}mobile_slide_{{ i }}_link{% endcapture %}
      {% capture slide_img %}mobile-slide_{{ i }}.jpg{% endcapture %}
      {% capture slide_alt %}mobile_slide_{{ i }}_alt{% endcapture %}
      {% if settings[slide] %}
        <li data-thumb="{{ slide_img | asset_url }}">
          <a href="{{ settings[slide_link] }}" class="slide-link">
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

{% schema %}
  {
    "name": "Slider",
    "class": "home-slider",
    "settings": [],
	"blocks": [
	  {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "checkbox",
            "id": "slide",
            "label": "Enable"
          },
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Image",
            "info": "1070 x 276px recommended"
          },
          {
            "type": "text",
            "id": "slide_title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "slide_link_title",
            "label": "Link Title"
          },
          {
            "type": "text",
            "id": "slide_link",
            "label": "Link URL"
          },
          {
            "type": "text",
            "id": "slide_alt",
            "label": "Alt text"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Other",
        "name": "Slider"
      }
    ]
  }
{% endschema %}

